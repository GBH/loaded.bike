%h1 Tours

= link "New Tour", to: current_user_tour_path(@conn, :new), class: "btn btn-info"

%table

  - for tour <- @tours do
    %tr
      %td
        = tour.title
      %td
        = link "Show", to: current_user_tour_path(@conn, :show, tour), class: "btn btn-default btn-xs"
        = link "Edit", to: current_user_tour_path(@conn, :edit, tour), class: "btn btn-default btn-xs"
        = link "Delete", to: current_user_tour_path(@conn, :delete, tour), class: "btn btn-danger btn-xs", method: :delete, data: [confirm: "Are you sure?"]

