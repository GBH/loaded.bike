- form_for @changeset, user_tour_path(@conn, :create), fn f ->

  - if @changeset.action do
    .alert.alert-danger
      %p There are some errors

  .form-group
    = text_input f, :title, placeholder: "Title", class: "form-control"
    = error_tag f, :title

  .form-group
    = textarea f, :description, placeholder: "Description", class: "form-control"
    = error_tag f, :description

  = submit "Create Tour", class: "btn btn-primary"