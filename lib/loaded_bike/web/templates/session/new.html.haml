.heading
  %h1 Sign in

- opts = [as: :session, label_col: "col-sm-4", control_col: "col-sm-5"]
- form_for @conn, session_path(@conn, :create), opts, fn f ->

  = F.email_input f, :email

  - forgot_password = link("Forgot password?", to: password_path(@conn, :new))
  = F.password_input f, :password, help: forgot_password

  .form-group.row
    .col-sm-5.offset-sm-4
      = submit "Sign in", class: "btn btn-primary"
      = link "Cancel", to: landing_path(@conn, :show), class: "btn btn-link"
