.heading
  %h1 Reset Password

- opts = [as: :password, label_col: "col-sm-4", control_col: "col-sm-5"]
- form_for @conn, password_path(@conn, :create), opts, fn f ->

  = F.email_input f, :email

  .form-group.row
    .col-sm-5.offset-sm-4
      = submit "Send Recovery Email", class: "btn btn-primary"
      = link "Cancel", to: landing_path(@conn, :show), class: "btn btn-link"
