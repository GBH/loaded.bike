= F.text_input @f, :title
= F.text_input @f, :short_description, label: "Short Desc"

- help = render LoadedBike.Web.UserView, "_formatting_help.html"
= F.textarea @f, :description, input_opts: [data: [autoresize: true]], help: help

- F.form_group @f, :status do
  = F.radio_button @f, :status, "planned", label: "Planned"
  = F.radio_button @f, :status, "active", label: "Current on the road"
  = F.radio_button @f, :status, "completed", label: "It's finished"

- F.form_group @f, :is_published, label: "" do
  = F.checkbox @f, :is_published, label: "Published"
