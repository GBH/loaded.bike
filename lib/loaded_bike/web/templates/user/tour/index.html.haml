.tours
  - for tour <- @tours do
    .tour
      .heading
        - path = current_user_tour_path(@conn, :show, tour)
        = link tour.title, to: path
        = link "View", to: path, class: "btn btn-sm btn-secondary"

      .map{data-map: "true", data-markers: "#{waypoints_to_json(@conn, :private, tour.waypoints)}"}

      .description
        = markdown(tour.description)

.actions.clearfix
  = link "New Tour", to: current_user_tour_path(@conn, :new), class: "btn btn-primary pull-right"

