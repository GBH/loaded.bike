- form_for @changeset, current_user_tour_waypoint_path(@conn, :update, @tour, @waypoint), fn f ->
  = render "_form.html", f: f, conn: @conn, changeset: @changeset, tour: @tour

  .form-group.row
    .col-sm-10.offset-sm-2
      = submit "Create Waypoint", class: "btn btn-primary"
      = link "Cancel", to: current_user_tour_waypoint_path(@conn, :show, @tour, @waypoint), class: "btn btn-link"

.row
  .col-sm-10.offset-sm-2
    = link "Delete", to: current_user_tour_waypoint_path(@conn, :delete, @tour, @waypoint), class: "btn btn-sm btn-outline-danger", method: :delete, data: [confirm: "Are you sure?"]
