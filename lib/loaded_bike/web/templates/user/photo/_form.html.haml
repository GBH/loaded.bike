.form-group.row
  = label @f, :file, class: "col-sm-2 col-form-label text-sm-right"
  .col-sm-10
    = file_input @f, :file, class: "form-control"
    = error_tag @f, :file

.form-group.row
  = label @f, :description, class: "col-sm-2 col-form-label text-sm-right"
  .col-sm-10
    = textarea @f, :description, class: "form-control", data: [autoresize: true]
    = error_tag @f, :description
